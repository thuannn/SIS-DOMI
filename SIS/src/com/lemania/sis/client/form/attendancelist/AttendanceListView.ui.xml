<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
    <g:HTMLPanel>
    	<g:Label text="Feuille d&apos;appel" styleName="pageTitle" horizontalAlignment="ALIGN_CENTER"/>
    	<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER" spacing="5">
    		<g:HorizontalPanel width="90%" styleName="subSection">
    			<g:Grid width="100%">
    				<g:row>
    					<g:customCell>
    						<g:Label text="1." styleName="step"/>
    					</g:customCell>
    					<g:customCell>
    						<g:Label text="Date : " horizontalAlignment="ALIGN_RIGHT"/>
    					</g:customCell>
    					<g:customCell>
    						<g:Label text="-" ui:field="lblDate" styleName="header"/>
    					</g:customCell>
    				</g:row>
    			</g:Grid>
    			<g:Grid width="100%">
    				<g:row>
    					<g:customCell>
    						<g:Label text="2." styleName="step"/>
    					</g:customCell>
    					<g:customCell>
    						<g:Label text="Nom :" horizontalAlignment="ALIGN_RIGHT"/>
    					</g:customCell>
    					<g:customCell>
    						<g:ListBox ui:field="lstProfs"/>
    					</g:customCell>
    				</g:row>
    				<g:row>
    					<g:customCell>
    						<g:Label text="-" styleName="hiddenText"/>
    					</g:customCell>
    					<g:customCell>
    						<g:Label text="Matière - Classe :" horizontalAlignment="ALIGN_RIGHT"/>
    					</g:customCell>
    					<g:customCell>
    						<g:ListBox ui:field="lstAssignments"/>
    					</g:customCell>
    				</g:row>
    			</g:Grid>
    			<g:HorizontalPanel>
    							<g:Label text="3." styleName="step"/>
    							<g:Grid width="100%">
    				<g:row>
    					<g:customCell>
    						<g:Label text="Type d&apos;absence à saisir :" horizontalAlignment="ALIGN_RIGHT"/>
    					</g:customCell>
    					<g:customCell>
    						<g:VerticalPanel width="100%" spacing="5">
    							<g:RadioButton name="absenceType" text="Absence" checked="true" ui:field="optAbsent"/>
    							<g:RadioButton name="absenceType" text="Retard" ui:field="optLate"/>
    							<g:RadioButton name="absenceType" text="Exclusion" ui:field="optExclude"/>
    							<g:RadioButton name="absenceType" text="Infirmerie" ui:field="optHealth"/>
    						</g:VerticalPanel>
    					</g:customCell>
    				</g:row>
    			</g:Grid>
    						</g:HorizontalPanel>
    		</g:HorizontalPanel>
    		<g:Label text="4." horizontalAlignment="ALIGN_LEFT" styleName="step" width=""/>
    		<g:Label text="-" styleName="header" ui:field="lblTitle"/>
    		<g:FlexTable width="100%" ui:field="tblAttendance"/>
    		<g:Label text="-" styleName="hiddenText"/>
    		<g:CheckBox text="Appel terminé" styleName="buttonToolbar" ui:field="chkComplete"/>
    	</g:VerticalPanel>
    </g:HTMLPanel>
</ui:UiBinder>