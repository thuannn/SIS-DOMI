<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<g:HTMLPanel>
		<g:Label text="Gestion des absences des élèves" styleName="pageTitle" horizontalAlignment="ALIGN_CENTER"/>
		<g:HorizontalPanel width="100%" spacing="5">
			<g:cell width="300">
				<g:VerticalPanel width="100%" styleName="s" verticalAlignment="ALIGN_TOP">
					<g:Label text="-" styleName="hiddenText" height="28px"/>
					<g:Label text="Liste des élèves" height=""/>
					<p1:DataGrid width="100%" height="450px" ui:field="tblStudents" pageSize="15"/>
					<g:Cell horizontalAlignment="ALIGN_CENTER">
						<p1:SimplePager location="CENTER" ui:field="pagerStudents" page="0" pageSize="10" pageStart="0"/>
					</g:Cell>
				</g:VerticalPanel>
			</g:cell>
			<g:Cell>
				<g:VerticalPanel width="100%">
					<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
						<g:Label text="-" styleName="header" ui:field="lblStudentName"/>
					</g:Cell>
					<g:Label text="Liste des absences"/>
					<p1:DataGrid width="100%" height="450px" ui:field="tblAbsences" pageSize="15"/>
					<g:Cell horizontalAlignment="ALIGN_CENTER">
						<p1:SimplePager location="CENTER" ui:field="pagerAbsences" page="0" pageSize="10" pageStart="0"/>
					</g:Cell>
				</g:VerticalPanel>
			</g:Cell>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
