<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%" spacing="2">
			<g:Label text="ATTRIBUTION PERSONNALISEE" horizontalAlignment="ALIGN_CENTER" styleName="pageTitle"/>
			<g:HorizontalPanel width="100%" spacing="5">
				<g:VerticalPanel width="" styleName="subSection" spacing="2">
					<g:Label text="Liste des élèves" styleName="sectionTitle"/>
					<g:Grid width="100%">
						<g:row>
							<g:customCell>
								<g:Label text="Ecole :"/>
							</g:customCell>
							<g:customCell>
								<g:ListBox width="200px" ui:field="lstEcoles"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Programme :"/>
							</g:customCell>
							<g:customCell>
								<g:ListBox width="200px" ui:field="lstProgrammes"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Classe :"/>
							</g:customCell>
							<g:customCell>
								<g:ListBox width="200px" ui:field="lstClasses"/>
							</g:customCell>
						</g:row>
					</g:Grid>
					<p1:DataGrid width="100%" height="200px" ui:field="tblBulletins"/>
				</g:VerticalPanel>
				<g:VerticalPanel width="100%" styleName="subSection" spacing="2">
					<g:Label text="Liste des matières" styleName="sectionTitle"/>
					<g:Label text="." ui:field="lblSelectedStudentName" styleName="header"/>
					<p1:DataGrid width="350px" height="500px" ui:field="tblSubjects"/>
				</g:VerticalPanel>
				<g:VerticalPanel width="100%" styleName="subSection" spacing="2">
					<g:Label text="Liste des branches" styleName="sectionTitle"/>
					<g:Label text="." ui:field="lblSelectedSubject" styleName="header"/>
					<p1:DataGrid width="280px" height="500px" ui:field="tblBranches"/>
				</g:VerticalPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
