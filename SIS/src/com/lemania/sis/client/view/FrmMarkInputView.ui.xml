<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%" spacing="2">
			<g:Label text="SAISIR LES NOTES" horizontalAlignment="ALIGN_CENTER" styleName="pageTitle"/>
			<g:HorizontalPanel width="100%">
				<g:VerticalPanel spacing="5" width="100%">
					<g:HorizontalPanel width="100%" spacing="2">
					<g:Label text="1" horizontalAlignment="ALIGN_LEFT" styleName="step"/>
					<g:Label text="Professeur" styleName="fieldTitle"/>
					<g:ListBox ui:field="lstProfs" width="300px"/>
				</g:HorizontalPanel>
					<g:VerticalPanel width="100%" spacing="2" styleName="subSection">
						<g:Label text="3" styleName="step"/>
						<g:Label text="Elèves" styleName="sectionTitle" width=""/>
						<p1:DataGrid width="500px" height="500px" ui:field="tblBulletinSubjects"/>
					</g:VerticalPanel>
			</g:VerticalPanel>
				<g:VerticalPanel spacing="5" width="100%">
					<g:HorizontalPanel width="100%" spacing="2">
						<g:Label text="2" styleName="step"/>
						<g:Label text="Classe &amp; Matière" styleName="fieldTitle"/>
						<g:ListBox width="300px" ui:field="lstAssignments"/>
					</g:HorizontalPanel>
					<g:VerticalPanel width="100%" spacing="2" styleName="subSection">
						<g:Label text="4" styleName="step"/>
						<g:Label text="Branches - Notes" styleName="sectionTitle"/>
						<p1:DataGrid width="100%" height="150px" ui:field="tblBranches"/>
					</g:VerticalPanel>
					<g:VerticalPanel width="100%" spacing="3" styleName="subSection">
						<g:Label text="5" styleName="step"/>
						<g:Label text="Saisir les notes" styleName="sectionTitle"/>
						<g:Grid cellPadding="2" cellSpacing="2" width="100%" ui:field="tblNotesInput">
						<g:row>
							<g:customCell>
								<g:Label text="Trimestre 1 :" width=""/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_1_1"/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_1_2"/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_1_3"/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_1_4"/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_1_5"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Trimestre 2 :" width=""/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_2_1"/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_2_2"/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_2_3"/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_2_4"/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_2_5"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Trimestre 3 :"/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_3_1"/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_3_2"/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_3_3"/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_3_4"/>
							</g:customCell>
							<g:customCell>
								<g:DoubleBox width="30px" ui:field="txt_t_3_5"/>
							</g:customCell>
						</g:row>
					</g:Grid>
					</g:VerticalPanel>
					<g:VerticalPanel width="100%" spacing="3" styleName="subSection">
						<g:Label text="Saisir les remarques" styleName="sectionTitle"/>
						<g:Grid cellPadding="2" cellSpacing="2" width="100%" ui:field="tblRemarksInput">
							<g:row>
								<g:customCell>
									<g:Label text="Trimestre 1 :" width=""/>
								</g:customCell>
								<g:customCell>
									<g:TextArea ui:field="txtRemarque1" width="" styleName="sis-TextArea" characterWidth="60"/>
								</g:customCell>
							</g:row>
							<g:row>
								<g:customCell>
									<g:Label text="Trimestre 2:"/>
								</g:customCell>
								<g:customCell>
									<g:TextArea width="" ui:field="txtRemarque2" styleName="sis-TextArea" characterWidth="60"/>
								</g:customCell>
							</g:row>
							<g:row>
								<g:customCell>
									<g:Label text="Trimestre 3 :"/>
								</g:customCell>
								<g:customCell>
									<g:TextArea ui:field="txtRemarque3" width="" styleName="sis-TextArea" characterWidth="60"/>
								</g:customCell>
							</g:row>
						</g:Grid>
					</g:VerticalPanel>
					<g:HorizontalPanel width="100%">
						<g:Label text="." width="200px" styleName="hiddenText"/>
						<g:Button text="Enregistrer" width="150px" ui:field="cmdSave"/>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
