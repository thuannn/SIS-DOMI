<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%" spacing="2">
			<g:Label text="ATTRIBUTION PROGRAMME / ELEVE" horizontalAlignment="ALIGN_CENTER" styleName="pageTitle"/>
			<g:HorizontalPanel width="100%" spacing="5">
				<g:VerticalPanel width="100%" spacing="2" styleName="subSection">
					<g:Label text="Liste des élèves actives" styleName="sectionTitle"/>
					<p1:DataGrid width="250px" height="600px" ui:field="tblStudents"/>
				</g:VerticalPanel>
				<g:VerticalPanel width="100%" spacing="2" styleName="subSection">
					<g:Label text="Détails du bulletin" styleName="sectionTitle"/>
					<g:Grid width="100%" cellPadding="5" cellSpacing="5">
						<g:row>
							<g:customCell>
								<g:Label text="Ecole :"/>
							</g:customCell>
							<g:customCell>
								<g:ListBox width="200px" ui:field="lstEcoles"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Programme :"/>
							</g:customCell>
							<g:customCell>
								<g:ListBox width="200px" ui:field="lstProgrammes"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Classe :"/>
							</g:customCell>
							<g:customCell>
								<g:ListBox ui:field="lstClasses" width="200px"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="." styleName="hiddenText"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Année :"/>
							</g:customCell>
							<g:customCell>
								<g:ListBox width="200px" ui:field="lstYear"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Profil :"/>
							</g:customCell>
							<g:customCell>
								<g:ListBox width="200px" ui:field="lstProfiles"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="." styleName="hiddenText"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Elève choisit :"/>
							</g:customCell>
							<g:customCell>
								<g:Label text="." ui:field="lblSelectedStudentName"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="." styleName="hiddenText"/>
							</g:customCell>
							<g:customCell>
								<g:Button text="Créer les bulletins &gt;&gt;" ui:field="cmdCreateBulletin"/>
							</g:customCell>
						</g:row>
					</g:Grid>
				</g:VerticalPanel>
				<g:VerticalPanel width="100%" spacing="2" styleName="subSection">
					<g:Label text="Liste des bulletins" styleName="sectionTitle"/>
					<p1:DataGrid width="350px" height="600px" ui:field="tblBulletins"/>
				</g:VerticalPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
